<h1><%=@cocktail.name%></h1>

<% @cocktail.doses.each do |dose| %>
  <p><%= " #{dose.ingredient.name} : #{dose.description} " %>
  <%= link_to "Delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
   <% end %> </p>

<p> <%= link_to 'back to all cocktails', cocktails_path %> </p>
<p> <%= link_to 'add an ingredient', new_cocktail_dose_path(@cocktail) %> </p>

